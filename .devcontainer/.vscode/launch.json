{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run ai-chatbot as Streamlit App",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "cwd": "${workspaceFolder}/app",
      "args": [
        "run",
        "ai-chatbot.py",
        "--server.port=8501",
        "--server.address=0.0.0.0"
      ],
      "justMyCode": false
    }
  ]
}
